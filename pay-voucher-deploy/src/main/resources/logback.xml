    </appender>

    <logger name="com.dream.pay.voucher" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="BUSINESS"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.alibaba.dubbo" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="DUBBO"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="druid.sql.Statement" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="SQL"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.youzan.platform.bootstrap.rest.extension.RequestHandler" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="REQUEST"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.dream.pay.voucher" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="TRACK"/>
        <appender-ref ref="VOUCHER_API_IMPL"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <logger name="com.dream.pay.voucher" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="TRACK"/>
        <appender-ref ref="VOUCHER_DAO"/>
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="ERROR_APPENDER"/>
        <appender-ref ref="ROOT"/>
    </root>
</configuration>
